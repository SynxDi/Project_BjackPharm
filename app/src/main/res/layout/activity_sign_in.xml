<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="223dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="68dp"
        app:srcCompat="@drawable/logo_rey" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/imageViewLogo"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to your Account"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/EmailLoginTxt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/round_background_black"
            android:hint="Email"
            android:paddingStart="20dp"
            android:fontFamily="serif"/>

        <EditText
            android:id="@+id/passwordLoginTxt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="2"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="textPassword"
            android:background="@drawable/round_background_black"
            android:hint="Password"
            android:paddingStart="20dp"
            android:fontFamily="serif"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signInBtnLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="Login"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_background_purple"
            android:textColor="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp">

            <View
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_toStartOf="@+id/orTxt"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>


            <TextView
                android:id="@+id/orTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="serif"
                android:text="dont have account?"
                android:textSize="16dp" />
            <View
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_toEndOf="@+id/orTxt"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>


        </RelativeLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gotoRegisterBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Go to Register"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/round_background_purple"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:gravity="center"/>


    </LinearLayout>




</RelativeLayout>