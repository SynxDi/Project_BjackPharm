<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_SignUp"
    android:orientation="vertical"
    android:layout_marginTop="50dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:text="Make an Account"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/nameSignUpTxt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:background="@drawable/round_background_black"
        android:hint="Name"
        android:paddingStart="20dp"
        android:fontFamily="serif"/>




    <EditText
        android:id="@+id/EmailSignUpTxt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/round_background_black"
        android:hint="Email"
        android:paddingStart="20dp"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/passwordSignUpTxt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="2"
        android:maxLines="1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPassword"
        android:background="@drawable/round_background_black"
        android:hint="Password"
        android:paddingStart="20dp"
        android:fontFamily="serif"/>


    <EditText
        android:id="@+id/conpasswordSignUpTxt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="2"
        android:maxLines="1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPassword"
        android:background="@drawable/round_background_black"
        android:hint="Confirm Password"
        android:paddingStart="20dp"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/phoneNumberSignUpTxt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="phone"
        android:background="@drawable/round_background_black"
        android:hint="Phone Number"
        android:paddingStart="20dp"
        android:fontFamily="serif"/>

    <Button
        android:id="@+id/registerFrstBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="serif"
        android:text="Register"
        android:textAllCaps="false"
        android:textStyle="bold"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <View
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_toStartOf="@+id/orTxt"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>


        <TextView
            android:id="@+id/orTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="serif"
            android:text="Already have account?"
            android:textSize="16dp" />
        <View
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_toEndOf="@+id/orTxt"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>


    </RelativeLayout>

    <Button
        android:id="@+id/gotoLoginBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="serif"
        android:text="Go to Login"
        android:textAllCaps="false"
        android:textStyle="bold"
        />


</LinearLayout>